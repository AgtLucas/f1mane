<project name="F1-Mane" default="targetPadrao">

	<property environment="env" />
	<path id="classpath.compilacao">
		<fileset dir="${env.TOMCAT_HOME}/common/lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="paddock/WEB-INF/lib">
			<include name="*.jar" />
		</fileset>
		<pathelement location="build" />
	</path>

	<target name="targetPadrao" depends="gerarListCarros,copiaRecursos,compilarClasses,criarJar,atualizaPaddock,criarWar">
	</target>


	<target name="gerarListCarros">
		<java classname="sowbreira.f1mane.recursos.CarregadorRecursos" failonerror="true">
			<classpath refid="classpath.compilacao" />
			<arg value="br" /> 
		</java>
	</target>

	<target name="compilarClasses">

		<javac destdir="build" srcdir="src" nowarn="true">
			<classpath refid="classpath.compilacao" />
		</javac>
	</target>

	<target name="copiaRecursos">
		<delete dir="build" />
		<mkdir dir="build" />
		<copy todir="build" verbose="true">
			<fileset dir="src">
				<exclude name=".*" />
				<exclude name=".*/" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="criarJar">
		<jar jarfile="f1mane.jar" compress="true" manifest="MANIFEST.MF">
			<fileset dir="build">
				<exclude name=".*" />
				<exclude name=".*/" />
				<exclude name="**/*.java" />
				<exclude name="build.xml" />
			</fileset>
		</jar>
	</target>
	<target name="atualizaPaddock">
		<delete file="paddock/WEB-INF/lib/f1mane.jar" />
		<delete file="paddock/f1mane.jar" />
		<copy file="f1mane.jar" todir="paddock" />
		<copy file="f1mane.jar" todir="paddock/WEB-INF/lib" />
		<delete file="f1mane.jar" />
	</target>
	<target name="criarWar" depends="">
		<delete dir="${env.TOMCAT_HOME}/webapps/paddock" />
		<war compress="true" destfile="${env.TOMCAT_HOME}/webapps/paddock.war">
			<fileset dir="paddock" />
		</war>
	</target>
</project>